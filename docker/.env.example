# Docker image settings
DOCKERHUB_NAMESPACE=jupedsim
IMAGE_TAG=local-latest

# Port mappings on your machine
FRONTEND_PORT=8080
BACKEND_PORT=8000
NODE_BACKEND_PORT=3001

# Core local app settings
FRONTEND_URL=http://localhost:8080
MONGODB_URI=mongodb://mongodb:27017/jupedsim-scenarios
SESSION_SECRET_KEY=change-this-local-session-secret
SCENARIO_PROXY_SHARED_SECRET=change-this-local-scenario-secret

# Local guest mode (no OAuth login required)
LOCAL_DOCKER_MODE=true
LOCAL_DOCKER_USER_SUB=local-user
LOCAL_DOCKER_USER_NAME=Local User
LOCAL_DOCKER_USER_EMAIL=local@localhost
LOCAL_DOCKER_USER_EPPN=local@localhost
SIM_QUOTA_DAILY_LIMIT=500

# Optional integrations (leave empty for local use)
HELMHOLTZ_CLIENT_ID=
HELMHOLTZ_CLIENT_SECRET=
BLABLADOR_API_KEY=
ADMIN_USER_IDS=

# Optional UI maintenance banner
MAINTENANCE_BANNER_ENABLED=false
MAINTENANCE_BANNER_TEXT=
